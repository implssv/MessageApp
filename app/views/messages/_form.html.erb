<%= simple_form_for @message do |f| %>

    <%= f.input :title, label:"Message Title" %>

    <%= md_simple_editor  do %>
        <%= f.input :description, as: :text %>
    <% end %>

    <div>
    <%= f.collection_select :category_id, Category.all, :id, :name %>
    </div>

    <p>
      <%= f.label :cover %>
      <%= f.input :cover, placeholder:"Link to photo" %>
    </p>


    <%= f.button :submit %>
<% end %>