<%= simple_form_for @message do |f| %>

    <%= f.input :title, label:"Message Title" %>

    <%= md_simple_editor  do %>
        <%= f.input :description, as: :text %>
    <% end %>

    <%= collection_select(:name, :category_id, @message, :id, {:prompt => false}) %>

    <%= f.button :submit %>
<% end %>