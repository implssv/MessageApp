<div class="container">
  Messages
  <div class="row">
    <% @messages.each do |m| %>
    <div class="col-sm-4" style="margin-top:10px;">
      <div class="news">
        <div class="img-figure">
          <div class="cat"><%= m.category.name %></div>
          <%= image_tag m.cover.url , class: "img-responsive"  if  m.cover.url ? %>
        </div>

        <div class="title">
          <h1><%= m.title %></h1>
        </div>
        <p class="description">
          <%= truncate(m.description, length:30) %>
        </p>

        <p class="more">
          <%= link_to "Read more", message_path(m), class: "fa fa-angle-right"%>

        </p>
      </div>


    </div>
    <% end %>
  </div>
</div>
      <div class="row">
       <div style="text-align:center"> <%= will_paginate @messages %></div>
      </div>